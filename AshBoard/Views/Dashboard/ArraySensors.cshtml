@model List<AshBoard.Application.DTOs.ArraySensor.ArraySensorDto>
@{
    ViewData["Title"] = "Arrays de Sensores";
}

<h2>Arrays de Sensores</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome do Local</th>
            <th>IDs dos Sensores</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var array in Model)
        {
            <tr>
                <td>@array.Id</td>
                <td>@array.NomeLocal</td>
                <td>
                    @if (array.SensoresIds != null && array.SensoresIds.Any())
                    {
                        @string.Join(", ", array.SensoresIds)
                    }
                    else
                    {
                        <span>Nenhum sensor vinculado</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@model List<AshBoard.Application.DTOs.Sensor.SensorDto>
@{
    ViewData["Title"] = "Sensores";
}

<h2>Lista de Sensores</h2>

<a href="@Url.Action("CreateSensor", "Dashboard")" class="btn btn-success mb-3">Adicionar Novo Sensor</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome do Local</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.NomeLocal</td>
                <td>@s.Latitude</td>
                <td>@s.Longitude</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("EditSensor", "Dashboard", new { id = s.Id })">Editar</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteSensor", "Dashboard", new { id = s.Id })">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
